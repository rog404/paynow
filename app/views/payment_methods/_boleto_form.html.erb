<%= form_with model: [:company ,payment_method], class: 'row g-3' do |f| %>
    <div class="col-md-12">
        <%= f.label :payment, class: 'form-label' %>
        <%= f.collection_select :payment, payments, :id, :display_name ,{}, {:class => 'form-select'}%>
        <% payment_method.errors[:payment].each do |error| %>
            <div class="alert alert-danger"><%= error %></div>
        <% end %>
    </div>
    <div class="col-md-4">
        <%= f.label :bank_code, class: 'form-label' %>
        <%= f.text_field :bank_code, class: 'form-control' %>
        <% payment_method.errors[:bank_code].each do |error| %>
            <div class="alert alert-danger"><%= error %></div>
        <% end %>
    </div>
    <div class="col-md-4">
        <%= f.label :bank_agency, class: 'form-label' %>
        <%= f.text_field :bank_agency, class: 'form-control' %>
        <% payment_method.errors[:bank_agency].each do |error| %>
            <div class="alert alert-danger"><%= error %></div>
        <% end %>
    </div>
    <div class="col-md-4">
        <%= f.label :bank_account, class: 'form-label' %>
        <%= f.text_field :bank_account, class: 'form-control' %>
        <% payment_method.errors[:bank_account].each do |error| %>
            <div class="alert alert-danger"><%= error %></div>
        <% end %>
    </div>
    <%= f.submit button_text, class: 'btn btn-primary' %>
<% end %>