<%= link_to t('.back'), payments_path, class: 'btn btn-dark my-3' %>
<h1><%= t '.title' %></h1>
<%= form_with model: [@payment], class: 'row g-3' do |f| %>
    <div class="col-md-6">
        <%= f.label :description, class: 'form-label' %>
        <%= f.text_field :description, class: 'form-control' %>
        <% @payment.errors[:description].each do |error| %>
            <div class="alert alert-danger"><%= error %></div>
        <% end %>
    </div>
    <div class="col-6">
        <%= f.label :payment_type, class: 'form-label' %>
        <div class="input-group mb-3">
            <%= f.select :payment_type, Payment.payment_types.keys.map {|type| [Payment.human_attribute_name("payment_type.#{type}"),type]}, {}, {:class => 'form-select'}%>
        </div>
        <% @payment.errors[:payment_type].each do |error| %>
            <div class="alert alert-danger"><%= error %></div>
        <% end %>
    </div>
    <div class="col-6">
        <%= f.label :fee, class: 'form-label' %>
        <div class="input-group mb-3">
            <%= f.text_field :fee, class: 'form-control', placeholder: '3.6' %>
            <span class="input-group-text">%</span>
        </div>
        <% @payment.errors[:fee].each do |error| %>
            <div class="alert alert-danger"><%= error %></div>
        <% end %>
    </div>
    <div class="col-6">
        <%= f.label :max_money_fee, class: 'form-label' %>
        <div class="input-group mb-3">
            <span class="input-group-text">R$</span>
            <%= f.text_field :max_money_fee, class: 'form-control', placeholder: '12.00' %>
        </div>
        <% @payment.errors[:max_money_fee].each do |error| %>
            <div class="alert alert-danger"><%= error %></div>
        <% end %>
    </div>
    <div class="form-check">
       <%= f.check_box :state, {id: 'check', class: 'form-check-input'}, "active", "disabled" %>
        <label class="form-check-label mx-1">
            Ativo
        </label>
    </div>
    <%= f.submit class: 'btn btn-primary' %>
</select>
<% end %>