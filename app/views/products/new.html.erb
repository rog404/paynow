<%= link_to t('.back'), company_products_path, class: 'btn btn-dark my-3' %>
<h1><%= t ".title" %></h1>
<%= form_with model: [:company ,@product], class: 'row g-3' do |f| %>
    <div class="col-md-6">
        <%= f.label :name, class: 'form-label' %>
        <%= f.text_field :name, class: 'form-control' %>
        <% @product.errors[:name].each do |error| %>
            <div class="alert alert-danger"><%= error %></div>
        <% end %>
    </div>
    <div class="col-md-6">
        <%= f.label :price, class: 'form-label' %>
        <div class="input-group mb-3">
            <span class="input-group-text">R$</span>
            <%= f.text_field :price, class: 'form-control' %>
        </div>
        <% @product.errors[:price].each do |error| %>
            <div class="alert alert-danger"><%= error %></div>
        <% end %>
    </div>
    <div class="col-md-4">
        <%= f.label :discount_pix, class: 'form-label' %>
        <div class="input-group mb-3">
            <%= f.text_field :discount_pix, class: 'form-control', placeholder: '15.0' %>
            <span class="input-group-text">%</span>
        </div>
        <% @product.errors[:discount_pix].each do |error| %>
            <div class="alert alert-danger"><%= error %></div>
        <% end %>
    </div>
    <div class="col-md-4">
        <%= f.label :discount_boleto, class: 'form-label' %>
        <div class="input-group mb-3">
            <%= f.text_field :discount_boleto, class: 'form-control', placeholder: '10.0' %>
            <span class="input-group-text">%</span>
        </div>
        <% @product.errors[:discount_boleto].each do |error| %>
            <div class="alert alert-danger"><%= error %></div>
        <% end %>
    </div>
    <div class="col-md-4">
        <%= f.label :discount_credit_card, class: 'form-label' %>
        <div class="input-group mb-3">
            <%= f.text_field :discount_credit_card, class: 'form-control', placeholder: '15.0' %>
            <span class="input-group-text">%</span>
        </div>
        <% @product.errors[:discount_credit_card].each do |error| %>
            <div class="alert alert-danger"><%= error %></div>
        <% end %>
    </div>
    <%= f.submit class: 'btn btn-primary' %>
<% end %>