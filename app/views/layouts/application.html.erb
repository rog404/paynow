<!DOCTYPE html>
<html>
  <head>
    <title>Paynow</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons"
      rel="stylesheet">
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark px-4">
      <%= link_to 'Paynow.com', root_path ,class: 'navbar-brand'%>
        <ul class="navbar-nav">
          <li class="nav-item">
            <%= link_to 'Home', root_path, class: 'nav-link' %>
          </li>
          <li class="nav-item">
            <%= link_to 'Empresas', companies_path, class: 'nav-link' %>
          </li>
          <li class="nav-item">
            <%= link_to 'MÃ©todos de Pagamento', payment_methods_path, class: 'nav-link' %>
          </li>
    </nav>
    <div class= "container">
      <% if notice %>
        <div class="alert alert-success">
          <div class="row justify-content-between">
            <div class="col"><%= notice %></div>
          </div>
        </div>
      <% end %>
      <% if alert %>
        <div class="alert alert-danger">
          <div class="row justify-content-between">
            <div class="col-4"><%= alert %></div>
          </div>
        </div>
      <% end %>
      <%= yield %>
    </div>
  </body>
</html>
