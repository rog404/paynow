<%= form_with model: company, class: 'row g-3' do |f| %>
    <div class="col-12">
        <%= f.label :name, class: 'form-label' %>
        <%= f.text_field :name, class: 'form-control' %>
        <% company.errors[:name].each do |error| %>
            <div class="alert alert-danger"><%= error %></div>
        <% end %>
    </div>
    <div class="col-md-6">
        <%= f.label :cnpj, class: 'form-label' %>
        <%= f.text_field :cnpj, class: 'form-control' %>
        <% company.errors[:name].each do |error| %>
            <div class="alert alert-danger"><%= error %></div>
        <% end %>
    </div>
    <div class="col-md-6">
        <%= f.label :email, class: 'form-label' %>
        <%= f.text_field :email, class: 'form-control' %>
        <% company.errors[:name].each do |error| %>
            <div class="alert alert-danger"><%= error %></div>
        <% end %>
    </div>
    <div class="col-12">
        <%= f.label :address, class: 'form-label' %>
        <%= f.text_field :address, class: 'form-control', placeholder: 'Rua maurício, 245, São Paulo - SP' %>
        <% company.errors[:name].each do |error| %>
            <div class="alert alert-danger"><%= error %></div>
        <% end %>
    </div>
    <div class="form-check">
       <%= f.check_box :state, {}, "active", "disabled" %>
        <label class="form-check-label mx-1">
            Ativo
        </label>
    </div>
    <%= f.submit button_text, class: 'btn btn-primary' %>
<% end %>