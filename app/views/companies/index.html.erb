<h1><%= t '.title' %></h1>
<% if @companies.empty? %>
    <div class="alert alert-dark" role="alert">
        <%= t '.empty' %>
    </div>
<% end %>
<ul class="list-group">
    <% @companies.each do |company| %>
        <li class="list-group-item d-flex justify-content-between align-items-start">
            <div class="ms-2 me-auto">
                <div class="fw-bold"><%= link_to company.name, company_path(company) %></div>
                <div class="card-text"><%= company.email %></div>
            </div>
            <span class="badge <%= company.active? ? 'bg-success' : 'bg-dark' %> rounded-pill"><%= Company.human_attribute_name "state.#{company.state}" %></span>
        </li>
    <% end %>
    <%= link_to 'Adicionar', new_company_path, class: 'btn btn-dark my-3' %>
</ul>
